# ----------------------------------------
# Środowisko uruchomieniowe aplikacji
# ----------------------------------------

# Port, na którym Express nasłuchuje (domyślnie 3000)
PORT=3000

# NODE_ENV steruje ładowaniem odpowiednich sekcji w kodzie (development|test|production)
NODE_ENV=development

# Host, na którym aplikacja ma nasłuchiwać w kontenerze (ważne, by to było 0.0.0.0)
HOST=0.0.0.0

# ----------------------------------------
# MongoDB
# ----------------------------------------
# URI używane lokalnie (w Dockerze alias "mongo")
MONGODB_URI_LOCAL=mongodb://mongo:27017/express-typescript-starter

# ----------------------------------------
# Session & Security
# ----------------------------------------
# Sekret do podpisywania ciasteczek sesyjnych — zamień na losowy ciąg
SESSION_SECRET=put_your_session_secret_here

# ----------------------------------------
# Facebook OAuth
# ----------------------------------------
# Zarejestruj aplikację na https://developers.facebook.com/
FACEBOOK_ID=your_facebook_app_id
FACEBOOK_SECRET=your_facebook_app_secret

# ----------------------------------------
# SendGrid (opcjonalnie, jeśli aplikacja wysyła emaile)
# ----------------------------------------
# Konto SendGrid dla powiadomień — jeśli nie używasz, możesz usunąć
SENDGRID_USER=your_sendgrid_username
SENDGRID_PASSWORD=your_sendgrid_password
